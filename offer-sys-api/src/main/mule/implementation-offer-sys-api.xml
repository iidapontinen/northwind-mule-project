		<db:update doc:name="Update offer record " doc:id="58256a2b-5c40-4622-ae3f-e6d9df654335" config-ref="Database_Config">
			<db:sql ><![CDATA[UPDATE offers
SET PriceDiscount = :priceDiscount, TotalPrice = :totalPrice, DateCreated = :dateCreated, OfferStatus = :status
WHERE OfferID = :offerID]]></db:sql>
			<db:input-parameters ><![CDATA[#[{
	"priceDiscount": payload.priceDiscount,
	"totalPrice": payload.totalPrice,
	"dateCreated": payload.dateCreated,
	"offerID": payload.offerID,
	"status": payload.status
}]]]></db:input-parameters>
		</db:update>
